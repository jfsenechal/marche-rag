{% extends 'base.html.twig' %}

{% block body %}
    <div class="p-5 m-4 bg-body-tertiary rounded-3">
        <div class="container">
            <h1 class="display-5 fw-bold">{{ documents|length }} Documents</h1>
        </div>
        <div class="col-lg-8">
            <table class="table">
                <tr>
                    <th>Title</th>
                    <th>Site</th>
                    <th>Token</th>
                </tr>
                {% for document in documents %}
                    <tr>
                        <td>
                            <a href="{{ document.url }}" target="_blank">
                                {{ document.title|raw }}
                            </a>
                        </td>
                        <td>{{ document.siteName }}</td>
                        <td>{{ document.tokens }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}
