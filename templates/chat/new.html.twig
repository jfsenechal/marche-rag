{% extends 'base.html.twig' %}

{% block body %}
    <div class="row g-0">
        <div class="col-lg-4 align-content-center">
            <div class="p-5 m-4 bg-body-tertiary rounded-3">
                <div class="container">
                    <a href="{{ path('rag_index') }}" class=" mb-4 h-100">Retour Ã  l'accueil</a>
                    <h1 class="display-5 fw-bold">AI Marche.be</h1>
                    {% if discussion.name %}
                        <p class="lead text-primary fw-semibold">
                            {{ discussion.name }}
                        </p>
                    {% endif %}
                    <p class="lead">
                        Chatbot trained on
                        <a href="{{ url }}" class="badge text-bg-primary link-underline-opacity-0">{{ url }}</a>,
